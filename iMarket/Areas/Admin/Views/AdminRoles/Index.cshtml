@model IEnumerable<iMarket.Models.Role>

@{
    ViewData["Title"] = "Danh sách quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Danh sách quyền truy cập</li>
    </ol>
</nav>

<div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DANH SÁCH QUYỀN TRUY CẬP</h4>
            <div class="row">
                <div class="col-md-12 mb-4">
                    <p class="float-end">
                        <a asp-action="Create" class="btn icon icon-left btn-primary"><i data-feather="plus-square"></i> Tạo mới</a>
                    </p>
                </div>
            </div>
            <div class="row" id="table-borderless">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-borderless mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Tên quyền truy cập
                                    </th>
                                    <th>
                                        Mô tả
                                    </th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleId)
                                            </td>
                                            <td class="text-bold-500">
                                                @Html.DisplayFor(modelItem => item.RoleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.RoleId" class="btn icon icon-left btn-info" title="Xem chi tiết"><i data-feather="info"></i></a> |
                                                <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn icon icon-left btn-success" title="Chỉnh sửa"><i data-feather="edit"></i></a> |
                                                <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn icon icon-left btn-danger" title="Xóa"><i data-feather="delete"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>