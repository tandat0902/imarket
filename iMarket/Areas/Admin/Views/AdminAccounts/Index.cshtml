@model IEnumerable<iMarket.Models.Account>

@{
    ViewData["Title"] = "Danh sách tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Danh sách tài khoản quản trị</li>
    </ol>
</nav>

<div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DANH SÁCH TÀI KHOẢN QUẢN TRỊ</h4>
            <div class="row">
                <div class="col-md-3 mb-4">
                    <fieldset class="form-group">
                        <select class="form-select" id="idstatus" name="idstatus" asp-items="ViewBag.RoleList" style="box-shadow:none">
                            <option value="0" disabled selected>-- Chọn quyền truy cập --</option>
                        </select>
                    </fieldset>
                </div>
                <div class="col-md-3 mb-4">
                    <fieldset class="form-group">
                        <select class="form-select" id="basicSelect" asp-items="ViewBag.StatusList" style="box-shadow:none">
                            <option value="-1" disabled selected>-- Trạng thái --</option>
                        </select>
                    </fieldset>
                </div>
                <div class="col-md-6 mb-4">
                    <p class="float-end">
                        <a asp-action="Create" class="btn icon icon-left btn-primary"><i data-feather="plus-square"></i> Tạo mới</a>
                    </p>
                </div>
                
            </div>
            <div class="row" id="table-borderless">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-borderless mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Họ tên
                                    </th>
                                    <th>
                                        SĐT
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                    <th>
                                        Quyền
                                    </th>
                                    <th>
                                        Thao tác
                                        </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AccountId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FullName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @if(item.Active == true){
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge bg-success">Hoạt động</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge bg-danger">Ngưng hoạt động</span>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Role.RoleId)
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.AccountId" class="btn icon icon-left btn-info" title="Xem chi tiết"><i data-feather="info"></i></a> |
                                                <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn icon icon-left btn-success" title="Chỉnh sửa"><i data-feather="edit"></i></a> |
                                                <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn icon icon-left btn-danger" title="Xóa"><i data-feather="delete"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>